{
    "ts-node": {
        "moduleTypes": {
            "src/**/*": "esm"
        }
    },
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowUmdGlobalAccess": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "paths": {
            "common/*": ["js/common/*"],
            "icons/*": ["icons/*"],
            "scss/*": ["scss/*"],
            "util/*": ["js/browser/util/*"]
        }
    }
}
