{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true,
            "impliedStrict": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "jquery": true
    },
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "plugin:lit/recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
    ],
    "plugins": ["lit", "prettier", "@typescript-eslint/eslint-plugin", "eslint-plugin-tsdoc"],
    "rules": {
        "capitalized-comments": "off",
        "indent": [
            "error",
            4,
            {
                "MemberExpression": "off",
                "SwitchCase": 1
            }
        ],
        "new-cap": "off",
        "no-mixed-operators": "off",
        "object-curly-spacing": ["error", "always"],
        "prettier/prettier": ["error", { "tabWidth": 4, "printWidth": 120, "semi": false }],
        "prefer-destructuring": [
            "error",
            {
                "object": true,
                "array": false
            }
        ],
        "prefer-template": "error",
        "operator-linebreak": ["error", "after", { "overrides": { "?": "before", ":": "before" } }],
        "quotes": ["error", "double", { "allowTemplateLiterals": false, "avoidEscape": true }],
        "semi": ["error", "never"],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "tsdoc/syntax": "warn",
        "@typescript-eslint/member-delimiter-style": [
            "error",
            {
                "multiline": {
                    "delimiter": "none",
                    "requireLast": false
                },
                "singleline": {
                    "delimiter": "comma",
                    "requireLast": false
                }
            }
        ]
    }
}
