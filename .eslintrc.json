{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true,
            "impliedStrict": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "jquery": true
    },
    "parser": "babel-eslint",
    "plugins": ["prettier"],
    "extends": ["airbnb", "prettier"],
    "rules": {
        "brace-style": ["error", "1tbs"],
        "camelcase": ["error"],
        "curly": ["error", "all"],
        "eqeqeq": ["error", "smart"],
        "no-console": 0,
        "no-underscore-dangle": "off",
        "one-var": ["off"],
        "prefer-template": ["error"],
        "prettier/prettier": ["error", { "tabWidth": 4, "printWidth": 120 }],
        "quotes": ["error", "double", { "avoidEscape": true }],
      "require-jsdoc": ["error", {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": true,
          "ClassDeclaration": true,
          "ArrowFunctionExpression": true,
          "FunctionExpression": true
        }
      }],
        "valid-jsdoc": ["error"]
    }
}
